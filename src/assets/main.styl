body, p, ul, li
	margin: 0
ul
	list-style: none
	padding: 0
.menu
	width: 200px
	position: absolute
	top: 0
	left: 0
	bottom: 0
	background-color: #2c3b41
	border-right: solid 1px #e6e6e6
	h1 
		margin: 0
		padding: 0
		color: #fff
		text-align: center
		font-size: 24px
	.headimg
		width: 100px
		height: 100px
		border-radius: 50px
		display: block
		margin: 20px auto
	.opt
		color: #fff
		font-size: 0
		border-bottom: 1px solid #000
		span
			display: inline-block
			padding: 5px 0
			width: 50%
			font-size: 12px
			text-align: center
			transition: color .3s
			cursor: pointer
			&:hover
				color: #f00
	ul
		border-top: 1px solid #555
	li
		height: 40px
		line-height: 40px
		color: #fff
		font-size: 12px
		padding-left: 30px
		cursor: pointer
		transition: all .3s
	li:hover
		background-color:#1e282c !important
	li.selected
		background-color: #1cbba7
	.icon
		display: inline-block
		width: 5px
		height: 5px
		background-color: #fff
		vertical-align: middle
		margin-right: 10px
		border-radius: 50%
.main 
	position: absolute
	top: 0
	left: 200px
	right: 0
	bottom: 0
	background-color: #fff
	overflow: auto
	padding: 50px 30px 0 30px
	.main-title
		height: 50px
		line-height: 50px
		border-bottom: 1px solid #2c3b41
		position: fixed
		top: 0
		left: 200px
		right: 0
		background-color: #fff
		padding-left: 30px
		z-index: 2
.loading
	position: absolute
	top: 50%
	left: 50%
	i
		width: 4px
		height: 4px
		border-radius: 2px
		background: #ff4040
		float: left
		margin: 0 3px
		animation: demo1 linear 1s infinite
		-webkit-animation: demo1 linear 1s infinite
	i:nth-child(1)
		animation-delay:0s
	i:nth-child(2)
		animation-delay:0.15s
	i:nth-child(3)
		animation-delay:0.3s
	i:nth-child(4)
		animation-delay:0.45s
	i:nth-child(5)
		animation-delay:0.6s
	@keyframes demo1 
		0%,60%,100% {transform: scale(1);}
		30% {transform: scale(2.5);}
	@-webkit-keyframes demo1 
		0%,60%,100% {transform: scale(1);}
		30% {transform: scale(2.5);}


.item
	font-size: 12px
	height: 40px
	&.row-1
		height: 120px
		.item-title
			vertical-align: top
	&.row-2
		height: 460px
		.item-title
			vertical-align: top
	&:before
		height: 100%
		width: 0
		visibility: hidden
		content: ''
		display: inline-block
		vertical-align: middle
	.item-title
		width: 60px
		display: inline-block
	.item-body
		width: 10vw
		display: inline-block
		input, textarea, select
			display: block
			width: 100%
			height: 30px
			border: 1px solid #c3c3c3
			border-radius: 4px
			outline: none
			transition: all .3s
			padding-left: 10px
			box-sizing: border-box
			color: #606266
			font-size: 12px
			&:focus
				border-color: #1cbba7
		textarea
			height: 100px
			resize: none
		&.col-1
			width: 60vw
		&.col-2
			width: 70vw
	.item-row
		width: 100%
		vertical-align: middle
		display: inline-block
#msg
	color: #f00
	font-size: 12px
	top: -30px
	left: 50%
	transform: translateX(-50%)
	height: 30px
	line-height: 30px
	background-color: #fff
	padding: 0 10px
	border-radius: 4px
	position: absolute
	box-shadow: 0 0 10px rgba(0, 0, 0, .2)
	animation: showMsg 1.8s ease-in-out
	z-index: 999
		
@keyframes showMsg {
	0% {
		top: -30px
	}
	20% {
		top: 30px
	}
	80% {
		top: 30px
	}
	100% {
		top: -30px
	}
}